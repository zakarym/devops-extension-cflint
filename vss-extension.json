{
 	"manifestVersion": 1,
 	"id": "devops-extension-cflint",
 	"publisher": "JoshKnutsonExtensions",
 	"version": "1.3.0",
 	"name": "cflint code analysis",
 	"description": "Run cflint Static code analysis for CFML (a linter) as part of your build",
 	"public": true,
	"icons": {
        "default": "images/icon.png"
    },
 	"categories": ["Azure Pipelines"],
 	"targets": [
 		{
 			"id": "Microsoft.VisualStudio.Services"
 		}
 	],
 	"contributions": [
 		{
 			"id": "cflint",
 			"type": "ms.vss-distributed-task.task",
 			"targets": [
 				"ms.vss-distributed-task.tasks"
 			],
 			"properties": {
                "name": "tasks"
            }
 		}
	 ],
	 "content": {
        "details": {
            "path": "README.md"
        }
	},
	"screenshots": [
        {
            "path": "images/BuildSummary.png"
        },
        {
            "path": "images/TaskList.png"
		},
		{
            "path": "images/azure-pipeline-summary.png"
        },
		{
            "path": "images/tfs-pipeline-summary.png"
        }
    ],
	 "links": {
        "getstarted": {
            "uri": "https://github.com/joshknutson/devops-extension-cflint"
        },
        "support": {
            "uri": "https://github.com/joshknutson/devops-extension-cflint/issues"
		},
		"learn": {
            "uri": "https://github.com/cflint/CFLint/blob/master/RULES.md"
        },
        "repository": {
            "uri": "https://github.com/joshknutson/devops-extension-cflint"
        },
        "issues": {
            "uri": "https://github.com/joshknutson/devops-extension-cflint/issues"
        }
    },
	"tags": [
		"cfml",
		"code analysis",
		"code-quality",
		"coldfusion",
		"lint",
		"linter",
		"lucee",
		"static-analysis",
		"static-code-analysis",
        "build",
        "cflint"
    ],
 	"files": [
 		{
 			"path": "tasks"
 		},
 		{
 			"path": "node_modules/vss-web-extension-sdk/lib",
 			"addressable": true,
 			"packagePath": "lib"
 		}
 	]
 }